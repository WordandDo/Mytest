{
  "server": {
    "host": "0.0.0.0",
    "port": 8000
  },
  "resources": {
    "vm": {
      "enabled": true,
      "implementation_class": "utils.resource_pools.vm_pool.VMPoolImpl",
      "config": {
        "num_vms": 1,
        "provider_name": "aliyun",
        
        "// [修改 1] 将地区改为读取环境变量 ALIYUN_REGION (您的 .env 中是 cn-beijing)": "",
        "region": "${ALIYUN_REGION}",
        
        "os_type": "Ubuntu",
        "snapshot_name": "init_state",
        "action_space": "computer_13",
        "screen_size": [1920, 1080],
        "headless": true,
        
        "// [修改 2] 对应 .env 中的 CLIENT_PASSWORD": "",
        "client_password": "${CLIENT_PASSWORD}",
        
        "// [修改 3] 对应 .env 中的 ALIYUN_ACCESS_KEY_ID": "",
        "access_key": "${ALIYUN_ACCESS_KEY_ID}",
        
        "// [修改 4] 对应 .env 中的 ALIYUN_ACCESS_KEY_SECRET": "",
        "secret_key": "${ALIYUN_ACCESS_KEY_SECRET}",

        "// [可选] 如果您的代码支持通过 kwargs 传递这些参数，可以添加：": "",
        "image_id": "${ALIYUN_IMAGE_ID}",
        "instance_type": "${ALIYUN_INSTANCE_TYPE}",
        "vswitch_id": "${ALIYUN_VSWITCH_ID}",
        "security_group_id": "${ALIYUN_SECURITY_GROUP_ID}"
      }
    },
    "rag": {
      "enabled": true,
      "implementation_class": "utils.resource_pools.rag_pool.RAGPoolImpl",
      "config": {
        "num_rag_workers": 2,
        "rag_kb_path": "",
        "rag_index_path": "/home/a1/sdb/wikidata4rag/rag_index_20230401-10samples",
        "rag_model_name": "sentence-transformers/all-MiniLM-L6-v2",
        "use_faiss": true,
        "embedding_device": "cuda",
        "use_gpu_index": true,
        "default_top_k": 5
      }
    },
    "web_search": {
      "enabled": false,
      "implementation_class": "utils.resource_pools.web_search_pool.WebSearchPoolImpl",
      "config": {
        "provider": "google",
        "api_key": "${GOOGLE_API_KEY}",
        "max_concurrency": 10
      }
    }
  }
}